<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.space_invaders.MainMenuController" alignment="CENTER">
    <VBox spacing="40" fx:id="field" alignment="CENTER">
        <Label text="Space Invaders" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill:white;"></Label>
        <Label text="Welcome to the Main Menu" style="-fx-font-size: 18px; -fx-text-fill:white;"></Label>
        <HBox alignment="CENTER" spacing="20"> 
            <Button fx:id="startButton" text="Start Game" 
            style="-fx-font-size: 14px; 
                   -fx-background-color: #000; 
                   -fx-text-fill: #fff; 
                   -fx-padding: 10px 20px; 
                   -fx-border-radius: 5px; 
                   -fx-background-radius: 5px;">
    </Button>
    <Button fx:id="shopButton" text="Shop" 
            style="-fx-font-size: 14px; 
                   -fx-background-color: #000; 
                   -fx-text-fill: #fff; 
                   -fx-padding: 10px 20px; 
                   -fx-border-radius: 5px; 
                   -fx-background-radius: 5px;">
    </Button>
    
        </HBox>
    </VBox>
</HBox>
